{
  "name": "theabnermatheus-server-codebase",
  "version": "1.0.0",
  "main": "src/main.ts",
  "engines": {
    "pnpm": ">=7.0.0"
  },
  "scripts": {
    "start": "node dist/main.js",
    "build": "pnpm run clean && tsc",
    "dev": "nodemon --exec ts-node src/main.ts --watch src/ -e ts --inspect",
    "lint": "eslint --fix ./src ./test",
    "clean": "rimraf dist",
    "test": "tsc && jest test --colors --passWithNoTests",
    "test:debug": "pnpm test --detectOpenHandles --forceExit",
    "test:watch": "tsc && jest test --watch",
    "organization": "pnpm install && pnpm prepare && pnpx prisma generate",
    "reset": "rm -rf node_modules pnpm-lock.yaml && pnpm install && pnpx prisma generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.0.0",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-http": "^1.21.0",
    "inversify": "^6.0.1",
    "joi": "17.9.2",
    "luxon": "^3.3.0",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0",
    "dotenv": "^16.0.3",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/luxon": "^3.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.js": [
      "pnpm lint",
      "pnpm test"
    ],
    "*.ts": [
      "pnpm lint",
      "pnpm test"
    ],
    "*.json": [
      "pnpm lint",
      "pnpm test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
